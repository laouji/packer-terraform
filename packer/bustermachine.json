{
  "builders": [{
    "type": "digitalocean",
    "api_token": "nottherealtoken",
    "region": "fra1",
    "size": "512mb",
    "image": "centos-7-x64",
    "ssh_pty": true,
    "ssh_username": "root",
    "droplet_name": "bustermachine",
    "snapshot_name": "bustermachine-img-{{timestamp}}"
  }],
  "provisioners": [{
    "type": "chef-solo",
    "cookbook_paths": ["cookbooks"],
    "chef_license": "accept",
    "data_bags_path": "data_bags",
    "run_list": [ "recipe[local-accounts]", "recipe[nginx]" ]
  }]
}
